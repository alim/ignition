<%- model_class = Group -%>
<div class="page-header">
  <h1>Group</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @group.name %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= @group.description %></dd>
  <dt><strong>Owner:</strong></dt>
  <dd><%= @owner_email %></dd>
</dl>

<h3>Users Associated with the Group</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Re-invite</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td>
  				<%= form_tag notify_group_url, method: :put do %>
  					<%= hidden_field_tag :uid, user.id %>
  					<%= submit_tag 'Send Invite', class: "btn btn-mini" %>
  				<% end %>
  			</td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              groups_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_path(@group), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_path(@group),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
