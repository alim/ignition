<% if !user.account.present?  %>
  <%= link_to 'Add Credit Card', new_user_account_url(user), 
    class: 'btn btn-success' %>
<% else %>
  <% if user.account.customer_id.present? %>
    <%= link_to 'Update Credit Card', edit_user_account_url(user, user.account), 
      class: 'btn btn-success' %>
  <% else %>
    <%= link_to 'Add Credit Card', new_user_account_url(user), 
      class: 'btn btn-success' %>
  <% end %>
<% end %>

