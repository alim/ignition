<%= render :partial => 'shared/validation_errors' %>

<%= form_for @user, html: { class: 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, class: 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :first_name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, class: 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :last_name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, class: 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :phone, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, class: 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
	  <%= f.label :password, class: 'control-label' %>
	  <div class="controls">
		  <%= f.text_field :password, value: @user.password %>
	  </div>
  </div>

  <div class="control-group">
	  <%= f.label :password_confirmation, 'Confirm password', class: 'control-label' %>
	  <div class='controls'>
		  <%= f.text_field :password_confirmation, value: @user.password %>
	  </div>
  </div>

  <div class='control-group'>
    <%= f.label :role, class: 'control-label' %>
    <div class='controls form-inline'>
        <%= f.radio_button :role, User::CUSTOMER, class: 'radio' %>
        <label class='radio'>Customer &nbsp&nbsp</label>
      
        <%= f.radio_button :role, User::SERVICE_ADMIN, class: 'radio' %>
        <label class='radio'>Service Admin.</label>
    </div>
  </div>

  <% if controller.action_name == 'edit' %>
  <div id="credit_card_area">
    <dl class="dl-horizontal">
      <dt></dt>
      <dd>
        <% if !@user.account.present?  %>
          <%= link_to 'Add Credit Card', new_user_account_url(@user), 
		        class: 'btn btn-info' %>
		    <% else %>
		      <% if @user.account.customer_id.present? %>
		        <%= link_to 'Update Credit Card', edit_user_account_url(@user, @user.account), 
		          class: 'btn btn-info' %>
		      <% else %>
		        <%= link_to 'Add Credit Card', new_user_account_url(@user), 
		          class: 'btn btn-primary' %>
		      <% end %>
        <% end %>
      </dd>
    </dl>
  </div>
  <% end %>
  
  <div class="form-actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, class: 'btn' %>
  </div>
<% end %>
